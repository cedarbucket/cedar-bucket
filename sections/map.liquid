<div
  class="custom-map-section {{ section.settings.color_scheme }}"
  style="
    background-image: url({{ section.settings.background_image | img_url: '2000x' }});
    background-size: cover;
    background-position: center;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div
    class="overlay"
    style="
      background-color: {{ section.settings.overlay_color }};
      opacity: {{ section.settings.overlay_opacity }};
    "
  >
    <div></div>
  </div>

  <div class="page-width">
    <div class="map-main-header">
      <!-- Title and Subtitle -->
      <h2 class="title">{{ section.settings.title }}</h2>
      <p class="subtitle">{{ section.settings.subtitle }}</p>
    </div>
    <div class="container">
      <div class="content">
        <!-- Open Hours -->
        <div class="open-hours">
          <h3>Open</h3>
          <p>
            <span class="icon">üìÖ</span> {{ section.settings.days }}
            <span class="icon">‚è∞</span> {{ section.settings.hours }}
          </p>
        </div>

        <!-- Address -->
        <div class="address">
          <h3>Address</h3>
          <p><span class="icon">üìç</span> {{ section.settings.address }}</p>
        </div>

        <!-- Button -->
        <a href="{{ section.settings.button_link }}" class="btn">
          {{ section.settings.button_text }}
        </a>
      </div>

      <!-- Map Section -->
      <div class="map-container">
        {% if section.settings.api_key and section.settings.api_key != 'YOUR_API_KEY_HERE' %}
          <!-- Dynamic Map using API Key -->
          <iframe
            class="map-iframe"
            src="https://www.google.com/maps/embed/v1/place?key={{ section.settings.api_key }}&q={{ section.settings.map_address | url_encode }}"
            allowfullscreen
            loading="lazy"
          ></iframe>
        {% else %}
          <!-- Static Map Embed -->
          <iframe
            class="map-iframe"
            src="{{ section.settings.static_iframe }}"
            allowfullscreen
            loading="lazy"
          ></iframe>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .custom-map-section {
    position: relative;
    text-align: center;
    color: #fff;
  }
  .custom-map-section .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  .custom-map-section .map-main-header {
    color: var(--color-heading);
  }
  .custom-map-section .container {
    position: relative;
    z-index: 2;
    display: flex;
    flex-wrap: nowrap;
    gap: 2rem;
    align-items: center;
    justify-content: space-between;
  }
  .custom-map-section .content {
    flex: 1;
    width: 50%;
    min-width: 300px;
    padding: 1rem;
    border-radius: 8px;
  }
  .custom-map-section .content .title {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }
  .custom-map-section .content .subtitle {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: #ccc;
  }
  .custom-map-section .content .btn {
    display: inline-block;
    padding: 0.8rem 1.5rem;
    background-color: #fff;
    color: #222;
    text-decoration: none;
    border-radius: 5px;
    transition: all 0.3s;
  }
  .custom-map-section .content .btn:hover {
    background-color: #f5f5f5;
  }
  .map-container {
    position: relative;
    width: 50%; /* Full width of the parent container */
    height: 400px; /* Set a fixed height for the container */
    overflow: hidden; /* Ensure content doesn't overflow */
    border-radius: 10px; /* Optional: Add rounded corners */
  }

  .map-iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none; /* Remove default iframe border */
    border-radius: inherit; /* Inherit border radius from the parent */
  }
</style>

