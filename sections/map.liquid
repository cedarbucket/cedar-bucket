{{ 'section-map.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.50 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.50 | round: 0 }}px;
    padding-left: {{ section.settings.padding_left | times: 0.50 | round: 0 }}px;
    padding-right: {{ section.settings.padding_right | times: 0.50 | round: 0 }}px;
    {%  unless section.settings.container_style == "full_frame" %}
      max-width: var(--page-width);
      margin: auto;
    {% endunless %}
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      padding-left: {{ section.settings.padding_left }}px;
      padding-right: {{ section.settings.padding_right }}px;
    }

  }
{%- endstyle -%}

{%- style -%}
  .map-{{ section.id }} {
    border-radius: {{ section.settings.section_radius | times: 0.75 | round: 0 }}px;
    overflow: hidden;
    {% if section.settings.show_box_shadow %}
      box-shadow: 1px 1px 15px 8px rgba(0,0,0,0.5);
    {% endif %}
    {% if section.settings.show_box_border %}
      border: 1px solid white;
    {% endif %}
  }

  .custom-map-section .container .content {
    text-align: {{ section.settings.desktop_content_alignment }};
    padding: 0 40px;
  }
{%- endstyle -%}

<div
  class="map-{{ section.id }} custom-map-section color-{{ section.settings.color_scheme }} {% if section.settings.full_width %}sb-page-width{% endif %}"
  style="
    background-image: url({{ section.settings.background_image | img_url: '2000x' }});
    background-size: cover;
    background-position: center;
    padding-top: {{ section.settings.inner_padding_top }}px;
    padding-bottom: {{ section.settings.inner_padding_bottom }}px;
  "
>
  <div
    class="overlay"
    style="
      background-color: {{ section.settings.overlay_color }};
      opacity: {{ section.settings.overlay_opacity }};
    "
  >
    <div></div>
  </div>

  <div class="page-width">
    <div class="map-main-header">
      <!-- Title and Subtitle -->
      <h2 class="title">{{ section.settings.title }}</h2>
      <p class="subtitle">{{ section.settings.subtitle }}</p>
    </div>
    <div class="container">
      <div class="content">
        <!-- Open Hours -->
        <div class="open-hours">
          <h3>Open</h3>
          <p>
            <span class="icon">üìÖ</span> {{ section.settings.days }}
            <span class="icon">‚è∞</span> {{ section.settings.hours }}
          </p>
        </div>

        <!-- Address -->
        <div class="address">
          <h3>Address</h3>
          <p><span class="icon">üìç</span> {{ section.settings.address }}</p>
        </div>

        <!-- Button -->
        <a href="{{ section.settings.button_link }}" class="btn">
          {{ section.settings.button_text }}
        </a>
      </div>

      <!-- Map Section -->
      <div class="map-container">
        {% if section.settings.api_key and section.settings.api_key != 'YOUR_API_KEY_HERE' %}
          <!-- Dynamic Map using API Key -->
          <iframe
            class="map-iframe"
            src="https://www.google.com/maps/embed/v1/place?key={{ section.settings.api_key }}&q={{ section.settings.map_address | url_encode }}"
            allowfullscreen
            loading="lazy"
          ></iframe>
        {% else %}
          <!-- Static Map Embed -->
          <iframe
            class="map-iframe"
            src="{{ section.settings.static_iframe }}"
            allowfullscreen
            loading="lazy"
          ></iframe>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Map Section",
  "settings": [
    {
      "id": "background_image",
      "type": "image_picker",
      "label": "Background Image",
      "info": "Upload a background image for the section."
    },
    {
      "id": "inner_padding_top",
      "type": "range",
      "label": "t:sections.all.padding.padding_top",
      "default": 28,
      "step": 1,
      "min": 0,
      "max": 100
    },
    {
      "id": "inner_padding_bottom",
      "type": "range",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 28,
      "step": 1,
      "min": 0,
      "max": 100
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "id": "overlay_color",
      "type": "color",
      "label": "Overlay Color",
      "default": "#000000"
    },
    {
      "id": "overlay_opacity",
      "type": "range",
      "label": "Overlay Opacity",
      "default": 0.5,
      "min": 0,
      "max": 1,
      "step": 0.1
    },
    {
      "type": "select",
      "id": "container_style",
      "options": [
        {
          "value": "boxed",
          "label": "Boxed"
        },
        {
          "value": "full_frame",
          "label": "Full"
        }
      ],
      "default": "full_frame",
      "label": "Container Style"
    },
    {
      "type": "checkbox",
      "id": "show_box_shadow",
      "default": false,
      "label": "t:sections.image-banner.settings.show_box_shadow.label"
    },
    {
      "type": "checkbox",
      "id": "show_box_border",
      "default": false,
      "label": "t:sections.image-banner.settings.show_box_border.label"
    },
    {
      "type": "range",
      "id": "section_radius",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Radius",
      "default": 0
    },
    {
      "type": "select",
      "id": "desktop_content_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.image-banner.settings.desktop_content_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.image-banner.settings.desktop_content_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.image-banner.settings.desktop_content_alignment.options__3.label"
        }
      ],
      "default": "center",
      "label": "t:sections.image-banner.settings.desktop_content_alignment.label"
    },
    {
      "id": "title",
      "type": "text",
      "label": "Title",
      "default": "Explore Quality Furniture"
    },
    {
      "id": "subtitle",
      "type": "text",
      "label": "Subtitle",
      "default": "Only one visit away"
    },
    {
      "id": "days",
      "type": "text",
      "label": "Open Days",
      "default": "Tuesday to Saturday"
    },
    {
      "id": "hours",
      "type": "text",
      "label": "Open Hours",
      "default": "10am to 5pm"
    },
    {
      "id": "address",
      "type": "text",
      "label": "Address",
      "default": "3517 W. Gray St. Utica, Pennsylvania 57867"
    },
    {
      "id": "map_address",
      "type": "text",
      "label": "Dynamic Map Address",
      "default": "3517 W. Gray St. Utica, Pennsylvania 57867"
    },
    {
      "id": "api_key",
      "type": "text",
      "label": "Google Maps API Key",
      "default": "YOUR_API_KEY_HERE"
    },
    {
      "id": "static_iframe",
      "type": "textarea",
      "label": "Static Map Embed Code",
      "default": "https://www.google.com/maps/embed..."
    },
    {
      "id": "button_text",
      "type": "text",
      "label": "Button Text",
      "default": "Delivery Service Agreement"
    },
    {
      "id": "button_link",
      "type": "url",
      "label": "Button Link",
      "default": "/"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_left",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_left",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_right",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_right",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Custom Map Section"
    }
  ]
}
{% endschema %}
