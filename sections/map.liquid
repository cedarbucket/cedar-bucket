    },
    {
      "id": "static_iframe",
      "type": "textarea",
      "label": "Static Map Embed Code",
      "default": "https://www.google.com/maps/embed..."
    },
    {
      "id": "button_text",
      "type": "text",
      "label": "Button Text",
      "default": "Delivery Service Agreement"
    },
    {
      "id": "button_link",
      "type": "url",
      "label": "Button Link",
      "default": "/"
    }
  ],
  "presets": [
    {
      "name": "Custom Map Section",
      "category": "Contact"
    }
  ]
}
{% endschema %}
